<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:App.Pages.TurningCanvas"
             x:Class="App.Pages.TurningCanvas.TurningCanvasPage">
    <ContentPage.Resources>
        <drawable:TurningCanvasDrawable
            x:Name="turningCanvasDrawable"
            x:Key="drawable" />
    </ContentPage.Resources>
    <VerticalStackLayout
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">

        <GraphicsView x:Name="turningCanvasGraphicsView"
                      Drawable="{StaticResource drawable}"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      WidthRequest="1080"
                      HeightRequest="1080"
                      StartInteraction="OnStartInteraction"
                      DragInteraction="OnDragInteraction"
                      EndInteraction="OnEndInteraction"/>
    </VerticalStackLayout>
</ContentPage>